{
  "compilerOptions": {
    "target": "es2016",                                
    "module": "commonjs",                       
    "baseUrl": "./",     
    "paths": {
      "@configs/*": ["src/configs/"],
      "@services/*": ["src/services/"],
      "@utils/*": ["src/utils/"]
    },                                    
    "outDir": "./dist",                                   
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,     
    "strict": true,                                 
    "skipLibCheck": true,
    "typeRoots" : ["./src/types", "./node_modules/@types"] 
  }
}
